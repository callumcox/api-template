{
  "name": "api-template",
  "version": "1.0.0",
  "description": "Project template for an Express based API",
  "main": "src/index.js",
  "scripts": {
    "start": "node ./src/index.js",
    "dev": "nodemon ./src/index.js",
    "lint": "eslint \"src/**/*{.js}\"",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/callumcox/api-template.git"
  },
  "keywords": [
    "express",
    "nodejs"
  ],
  "author": "Callum Cox",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/callumcox/api-template/issues"
  },
  "homepage": "https://github.com/callumcox/api-template#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "helmet": "^3.22.0"
  },
  "devDependencies": {
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.6",
    "nodemon": "^2.0.4",
    "prettier": "2.0.5"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!**/node_modules/**"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2020": true,
      "jest": true
    },
    "extends": [
      "plugin:prettier/recommended"
    ]
  },
  "lint-staged": {
    "**/*.{js,json}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}